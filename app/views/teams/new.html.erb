<%= turbo_frame_tag "team_modal" do %>
  <div aria-labelledby="modal-title"
    aria-modal="true" class="fixed inset-0 z-50 overflow-y-auto bg-light-gray" role="dialog" data-controller="modal" >
    <div class="h-screen w-full relative flex items-center justify-center">
      <div class="shadow-xl max-w-2xl bg-white m-1 p-8 prose prose-indigo origin-bottom mx-auto dark:bg-slate-700 dark:text-slate-200 min-w-[600px] rounded-2xl animate-fade-in-up">
        <h1 id="modal-title" class="dark:text-slate-100">New team</h1>
        <%= render "form", team: @team %>
         <%= button_tag "Close", data: { action: "modal#hideModal" }, type: "button", class: "rounded-lg py-3 px-5 bg-red-600 text-white" %>
      </div>
    </div>
  </div>
<% end %>